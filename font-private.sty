% font-private - Igor Martayan
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{font-private}

% Packages
\@ifpackageloaded{fontspec}{
	% If fontspec is loaded, don't load mathspec.
}{
	\RequirePackage{mathspec}
}
\defaultfontfeatures{Ligatures=TeX, Numbers={Lining, Proportional}}

% Commands
\newcommand{\configfont}[5][\setmainfont]{
	#1{#2}[
		UprightFont = #2#3,
		ItalicFont = #2#3 Italic,
		BoldFont = #2#4,
		BoldItalicFont = #2#4 Italic,
		Scale = #5
	]
}

\newcommand{\configfontit}[6][\setmainfont]{
	#1{#2}[
		UprightFont = #2#3,
		ItalicFont = #2#3#5,
		BoldFont = #2#4,
		BoldItalicFont = #2#4#5,
		Scale = #6
	]
}

\newcommand{\configfontsc}[6][\setmainfont]{
	#1{#2}[
		UprightFont = #2#3,
		ItalicFont = #2#3 Italic,
		BoldFont = #2#4,
		BoldItalicFont = #2#4 Italic,
		UprightFeatures = {SmallCapsFont = #2#5#3},
		ItalicFeatures = {SmallCapsFont = #2#5#3 Italic},
		BoldFeatures = {SmallCapsFont = #2#5#4},
		BoldItalicFeatures = {SmallCapsFont = #2#5#4 Italic},
		Scale = #6
	]
}

% Options
